<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="181dp"
        android:textSize="24sp"
        android:fontFamily="@font/poppinsextrabold"
        android:text="@string/bienvenido_de_nuevo"
        android:textColor="@color/secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/Correo"
        android:layout_width="270dp"
        android:layout_height="69dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/forma_entrada_texto"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="@string/correo"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="@color/supportVariant"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/Contraseña"
        android:layout_width="270dp"
        android:layout_height="69dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/forma_entrada_texto"
        android:ems="10"
        android:fontFamily="@font/poppinsregular"
        android:hint="@string/contrasena"
        android:inputType="textPassword"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textColorHint="@color/supportVariant"
        app:layout_constraintEnd_toEndOf="@+id/Correo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Correo"
        app:layout_constraintTop_toBottomOf="@+id/Correo" />

    <TextView
        android:id="@+id/textViewRegistrarme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppinslight"
        android:text="@string/registrarme"
        android:textColor="@color/secondary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonIniciarSesion"
        app:layout_constraintHorizontal_bias="0.967"
        app:layout_constraintStart_toStartOf="@+id/buttonIniciarSesion"
        app:layout_constraintTop_toBottomOf="@+id/buttonIniciarSesion" />

    <Button
        android:id="@+id/buttonIniciarSesion"
        style="@style/PrimaryButton"
        android:layout_width="268dp"
        android:layout_height="68dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/inicia_sesión"
        android:textColor="@color/general"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/TextOlvidoContrasena"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="@+id/TextOlvidoContrasena"
        app:layout_constraintTop_toBottomOf="@+id/TextOlvidoContrasena" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppinslight"
        android:text="@string/no_tienes_cuenta"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonIniciarSesion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonIniciarSesion"
        app:layout_constraintTop_toBottomOf="@+id/buttonIniciarSesion" />

    <TextView
        android:id="@+id/TextOlvidoContrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppinslight"
        android:text="@string/olvidoContraseña"
        android:textColor="@color/secondary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/Contraseña"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="@+id/Contraseña"
        app:layout_constraintTop_toBottomOf="@+id/Contraseña" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonIniciarSesion"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/buttonIniciarSesion"
        app:layout_constraintTop_toBottomOf="@+id/buttonIniciarSesion"
        app:srcCompat="@drawable/googlelogo" />


</androidx.constraintlayout.widget.ConstraintLayout>