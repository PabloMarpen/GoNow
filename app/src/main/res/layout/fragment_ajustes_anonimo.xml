            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/buttonIniciarSesionAnonimo"
            style="@style/PrimaryButton"
            android:layout_width="268dp"
            android:layout_height="68dp"
