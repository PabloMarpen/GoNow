            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonRegistroAnonimo"
            style="@style/PrimaryButton"
            android:layout_width="268dp"
