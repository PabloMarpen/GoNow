<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/tituloHorario"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Horario"
        android:textAlignment="center"
        android:textColor="@color/secondary"
        android:textSize="24sp" />

    <Switch
        android:id="@+id/switchAbierto"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:text="Abierto 24/7"
        android:textColor="@color/secondary"
        android:textSize="20sp" />

    <Switch
        android:id="@+id/switchCerrado"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:text="Cerrado"
        android:textColor="@color/secondary"
        android:textSize="20sp" />

    <Switch
        android:id="@+id/switchTieneHorario"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:text="Tiene horario"
        android:textColor="@color/secondary"
        android:textSize="20sp" />

    <!-- Aquí metemos los dos botones en línea -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/botonHorarioAbrir"
            style="@style/SecondaryButton"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppinslight"
            android:text="00:00"
            android:textSize="20sp" />

        <Button
            android:id="@+id/botonHorarioCerrar"
            style="@style/SecondaryButton"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:fontFamily="@font/poppinslight"
            android:text="00:00"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/comentario"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/poppinslight"
        android:text="Horas aproximadas en las que esta abierto el baño."
        android:textAlignment="center"
        android:textColor="@color/secondary"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonGuardar"
        style="@style/PrimaryButton"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Guardar"
        android:textSize="20sp" />

</LinearLayout>
